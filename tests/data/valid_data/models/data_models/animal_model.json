{
    "schema_name": "animal",
    "schema_title": "Animal",
    "schema_description": "An animal refers to a single subject.",
    "schema_type": "data_model",
    "metamodel_ref": "record_metamodel",
    "json_schema": {
        "type": "object",
        "properties": {
            "schema_ref": {
                "type": "string",
                "enum": ["animal"]
            },
            "data_name": {},
            "version_timestamp": {},
            "has_file": {
                "const": false
            },
            "sex": {},
            "species": {},
            "strain": {},
            "genotype": {},
            "age": {},
            "age_unit": {},
            "weight": {},
            "weight_unit": {},
            "notes": {},
            "time_of_removal": {},
            "time_of_save": {}
        },
        "required": ["schema_ref", "data_name"],
        "additionalProperties": true,
        "allOf": [
            {
                "if": {
                    "anyOf": [
                        {"required": ["age"]},
                        {"required": ["age_unit"]}
                    ]
                },
                "then": {
                    "required": ["age", "age_unit"]
                }
            },
            {
                "if": {
                    "anyOf": [
                        {"required": ["weight"]},
                        {"required": ["weight_unit"]}
                    ]
                },
                "then": {
                    "required": ["weight", "weight_unit"]
                }
            }
        ]
    }
}